<EditForm Model="@form" style="height:100%;">
    <main>
        <div class="yellowArrow">
            <h4>Vogn</h4>
            <label for="Size"></label>
            <InputSelect @bind-Value=form.Size name="size" id="Size" class="cart">
                <option value="Default" disabled>Vælg vogn</option>
                <option value="Normal">Almindelig</option>
                <option value="Large">Stor</option>
            </InputSelect>
        </div>
        <div class="blackArrow">
            <h4>Periode</h4>
            <InputSelect @bind-Value=form.Period name="time" class="cart">
                <option value="Default" disabled>Vælg periode</option>
                <option value="Day">Dag</option>
                <option value="Night">Nat</option>
                <option value="Weekend">Weekend</option>
                <option value="Holiday">Helligdag</option>
                <option value="Dec24">24 dec</option>
                <option value="Dec31">31 dec</option>
            </InputSelect>
        </div>
        <div class="yellowArrow">
            <h4>Cykel</h4>
            <div class="Choice">
                <InputNumber @bind-Value=form.Bicycle class="numeric"></InputNumber>
                <p>+ 30kr.</p>
            </div>
        </div>
        <div class="blackArrow">
            <h4>Opbæring</h4>
            <div class="Choice">
                <InputNumber  @bind-Value=form.Carry class="numeric"></InputNumber>
                <p>+ 30kr.</p>
            </div>
        </div>
        <div class="yellowArrow">
            <h4>Lufthavn</h4>
            <div class="Choice">
                <InputCheckbox @bind-Value=form.Airport class="Check"></InputCheckbox>
                <p>+ 15kr.</p>
            </div>
        </div>
        <div class="blackArrow">
            <h4>5-6 passengerer</h4>
            <div class="Choice">
                <InputCheckbox @bind-Value=form.Passengers class="Check"></InputCheckbox>
                <p>+ 40kr.</p>
            </div>
        </div>
        <div class="yellowArrow">
            <h4>LiftVogn</h4>
            <div class="Choice">
                <InputCheckbox @bind-Value=form.LiftCart class="Check"></InputCheckbox>
                <p>+ 350kr.</p>
            </div>
        </div>
        <div class="blackArrow">
            <h4>Øresund</h4>
            <div class="Choice">
                <InputCheckbox @bind-Value=form.Øresund class="Check"></InputCheckbox>
                <p>+ 350kr.</p>
            </div>
        </div>
        <div class="yellowArrow">
            <h4>Storebæltsbroen</h4>
            <div class="Choice">
                <InputCheckbox @bind-Value=form.Storebæltsbroen class="Check"></InputCheckbox>
                <p>+ 540kr.</p>
            </div>
        </div>
    </main>
</EditForm>

@code {
    public Input form { get; set; } = new();
    
}